[Unit]
Description=CM4 Serial Control Daemon
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/CMSerialControl
ExecStart=/usr/bin/node /home/pi/CMSerialControl/packages/daemon/src/index.js
Restart=on-failure
RestartSec=5
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
